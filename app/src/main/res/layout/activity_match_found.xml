<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background">

    <!-- Overlapping Profile Pictures -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMyProfile"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:rotation="-15"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        tools:src="@tools:sample/avatars"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivMatchProfile"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:rotation="15"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        tools:src="@tools:sample/avatars"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tvMatchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="match"
        android:textColor="@color/dark_text_primary"
        android:textSize="80sp"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvMatchSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="You have 24 hours to take a first step with new partner"
        android:textColor="@color/dark_text_secondary"
        android:gravity="center"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/tvMatchTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChatNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chat Now"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:paddingVertical="16dp"
        android:backgroundTint="@color/accent_orange"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@id/btnKeepSwiping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/btnKeepSwiping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KEEP SWIPING"
        android:textColor="@color/dark_text_secondary"
        android:fontFamily="@font/poppins_medium"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>