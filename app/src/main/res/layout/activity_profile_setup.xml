<?xml version="1.0" encoding="utf-8"?>
<!-- ScrollView is essential for long forms. It automatically handles different screen heights. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- All content is inside a vertical LinearLayout, which stacks them neatly. -->
        <TextView
            style="@style/Text.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Profile"
            android:textColor="@color/dark_text_primary" />

        <TextView
            style="@style/SectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Your Name"
            android:textColor="@color/dark_text_primary" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_selector"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:padding="16dp"
            android:textColor="@color/dark_text_primary"
            android:textColorHint="@color/dark_text_secondary"/>

        <TextView
            style="@style/SectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Add Photos"
            android:textColor="@color/dark_text_primary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/item_photo_slot"
            tools:itemCount="6"/>

        <TextView
            style="@style/SectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="About Me"
            android:textColor="@color/dark_text_primary" />

        <EditText
            android:id="@+id/etBio"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_selector"
            android:gravity="top"
            android:hint="@string/bio_hint"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textColor="@color/dark_text_primary"
            android:textColorHint="@color/dark_text_secondary"/>

        <Button
            android:id="@+id/btnSave"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/brand_primary"
            android:text="Save &amp; Continue" />
    </LinearLayout>
</ScrollView>