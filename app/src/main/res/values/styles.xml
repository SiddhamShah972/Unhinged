<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.UnHinged" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorPrimaryVariant">@color/brand_gradient_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/brand_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- System UI -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background_light</item>
    </style>

    <!-- TextView Styles with Poppins Font -->
    <style name="Text.Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="Text.Headline" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="Text.Body" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>
    <style name="Text.Label" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Enhanced Button Styles -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_primary_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">8dp</item>
    </style>
    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/brand_primary</item>
        <item name="strokeColor">@color/brand_primary</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Style for swipe action buttons -->
    <style name="ActionButton">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/action_button_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- Style for the header text like "About", "More Info" -->
    <style name="SectionHeader" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Style for the grey stat pills (distance, weight, height) -->
    <style name="StatPill" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Style for the interest chips -->
    <style name="InfoChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/dark_chip_background</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Style for the small archive image previews -->
    <style name="ArchiveImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>